        "husky": "^1.3.1",
        "jest": "^23.6.0",
        "jest-dom": "^3.0.0",
        "lint-staged": "^8.1.0",
        "prettier": "^1.15.3",
        "react": "^16.8.0-alpha.1",
        "react-dom": "^16.8.0-alpha.1",
        "react-testing-library": "^5.4.4",
        "ts-jest": "^23.10.5",
